.chat_screen
  .chat_screen__content
    - @messages.each do |message|
      %p.chat_screen__content--name
        = message.user.name
      %p.chat_screen__content--date
        = message.created_at
      %p.chat_screen__text
        - if message.content.present?
          = message.content
          = image_tag message.image.url, size: '120*180' if message.image.present?


